<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin_1">

    <TextView
        android:id="@+id/tv_day_daily"
        style="@style/Body"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@id/tv_description_daily"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Today" />

    <TextView
        android:id="@+id/tv_description_daily"
        style="@style/Body"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/default_margin_2"
        app:drawableEndCompat="@drawable/ic_sunny_weather2"
        app:layout_constraintEnd_toStartOf="@id/tv_max_daily"
        app:layout_constraintStart_toEndOf="@id/tv_day_daily"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Clear sky" />

    <TextView
        android:id="@+id/tv_max_daily"
        style="@style/Body"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/default_margin_2"
        app:layout_constraintEnd_toStartOf="@id/tv_min_daily"
        app:layout_constraintStart_toEndOf="@id/tv_description_daily"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="20ยบ" />

    <TextView
        android:id="@+id/tv_min_daily"
        style="@style/Body"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_max_daily"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="17ยบ" />

</androidx.constraintlayout.widget.ConstraintLayout>
